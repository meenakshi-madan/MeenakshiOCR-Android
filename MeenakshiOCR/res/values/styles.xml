<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
        <item name="android:typeface">monospace</item>
        <!--  <item name="android:tint">#1e90ff</item> -->
        <item name="android:textColor">#8bedf3</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="MainAppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:tint">#1e90ff</item>
        <item name="android:textColor">#8bedf3</item>
    </style>
    
	<style name="BaseBG">
	    <item name="android:background">@drawable/mainbg1</item>
	</style>
	
	<!-- <style name="OCRButtonBG">
	    <item name="android:background">@drawable/ocrbigbutton</item>
	</style>
	
	<style name="TextFields">
	    <item name="android:background">@drawable/textfieldbg</item>
	</style> -->
	
	<style name="ButtonTheme">
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:minLines">1</item>
	</style>
	
	<style name="DashboardButtonTheme">
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:textColor">#8bedf3</item>
	    <item name="android:background">@drawable/dashboard_selector</item>
	    <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textStyle">bold</item>
	</style>

</resources>